{
  "version": 2,
  "functions": {
    "api/index.ts": {
      "maxDuration": 30,
      "includeFiles": "dist/**"
    }
  },
  "rewrites": [
    {
      "source": "/(.*)",
      "destination": "/api"
    }
  ],
  "env": {
    "NODE_ENV": "production"
  },
  "installCommand": "npm ci && npx prisma generate"
}
